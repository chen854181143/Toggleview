<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:chenyang="http://schemas.android.com/apk/res/com.chenyang.toggleview"
    tools:context=".MainActivity" >

    <com.chenyang.toggleview.ui.ToggleView
        android:id="@+id/toggleView"
        android:layout_centerInParent="true"
        chenyang:switch_background="@drawable/switch_background"
        chenyang:slide_button="@drawable/slide_button"
        chenyang:switch_state="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>